<Page x:Class="Sklad.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sklad"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="315*"/>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="342*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="169*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="214*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Администратор" Grid.RowSpan="4" Grid.ColumnSpan="3"></TextBlock>
        <Button Content="Данные пользователей" Grid.Column="1" Grid.Row="1" Name="DataAllUsers" Click="DataAllUsers_Click" Width="auto" ></Button>
        <Button Content="Данные товаров" Grid.Column="1" Grid.Row="2" Name="DataAllAssortment" Click="DataAllAssortment_Click" Width="auto" ></Button>

    </Grid>
</Page>
